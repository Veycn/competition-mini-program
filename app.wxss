page{
  width: 100%;
  height: 100%;
}

::-webkit-scrollbar {
  display: none;
}

@import 'weui.wxss';



.t-default {
  color: #999;
  line-height: 1;
  font-size: 12px;
}
.t-small {
  color: #111;
  font-size: 12px;
}

.t-normal{
  color: #555;
}

.t-warn {
  font-size: 14px;
  color: #f60;
  letter-spacing: 2rpx;
}
.fs-16{
  font-size: 16px;
}
.fs-12{
  font-size: 12px;
  line-height: 1;
}

.filter-item {
  padding: 4rpx 20rpx;
  margin: 0 10rpx;
  border-radius: 10rpx;
  display: inline-block;
  line-height: 1;
}
.item-icon{
  width: 50rpx;
  height: 50rpx;
  vertical-align: top;
  margin-right: 15rpx;
}
.filter-item-active{
  background: #111;
  color: #CCB458;
}
