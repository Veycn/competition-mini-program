/* components/list/comp.wxss */

@import '/style.wxss';

.content-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 15rpx;
}
.content-item .c-img{
  width: 240rpx;
  height: 200rpx;
  display: block;
  border-radius: 10rpx;
  border-bottom-left-radius: 0;
}
.overview {

}
.overview .c-header {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 1;
}
.c-header > .short-call{
  display: -webkit-flex;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.type view{
  line-height: 1;
  margin-top: 12rpx;
}
.type {
  padding-left: 15rpx;
}