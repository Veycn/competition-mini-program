/* pages/aboutme/index.wxss */
.aboutme{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 15rpx;
  background: #f8f8f8;
}
.aboutme > .list > .item{
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 6rpx #ccc; 
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.aboutme > .list > .item > .v-icon {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}
.aboutme > .list > .item > .msg {
  flex: 1;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: left;
  color: #666;
}
.aboutme > .list > .item > .msg > .name {
  color: #333;
}

.aboutme > .list > .item > .more {
  width: 180rpx;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
}

page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.top{
  z-index: 200;
  background: #fff;
}
.bg {
  background: #f8f8f8;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
.active > .weui-navbar__title{
  color: #ccb458;
}
.weui-navbar__item{
  padding: 6rpx 0;
}
.weui-tab__panel{
  padding-top: 60rpx;
}
.weui-tab__content{
  box-sizing: border-box;
  padding: 20rpx 15rpx 0;
  text-align: initial;
  width: 100%;
  height: 100%;
}
