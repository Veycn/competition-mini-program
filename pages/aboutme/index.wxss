/* pages/aboutme/index.wxss */
.aboutme{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 15rpx;
  background: #f8f8f8;
}
.aboutme > .list > .item{
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 6rpx #ccc; 
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.aboutme > .list > .item > .v-icon {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}
.aboutme > .list > .item > .msg {
  flex: 1;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: left;
  color: #666;
}
.aboutme > .list > .item > .msg > .name {
  color: #333;
}

.aboutme > .list > .item > .more {
  width: 180rpx;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
}
