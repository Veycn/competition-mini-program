/* pages/detail/index.wxss */

.detail{
  width: 100%;
  height: 100%;
  position: relative;
}

.banner{
  width: 100%;
}
.banner > .img{
  width: 100%;
}

.content{
  
}

.content > .desc {
  padding: 15rpx;
  box-sizing: border-box;
}
.desc > .subhead{
  color: #555;
}






.control{
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 15rpx 45rpx;
  border-top: 1rpx solid #ccc;
}
.control > .btn{
  width: 660rpx;
  height: 70rpx;
}
.btn{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ccb458;
  border-radius: 10rpx;
}
.btn:nth-child(1){
  margin-bottom: 15rpx;
}
.btn > text{
  display: inline-block;
  width: 300rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #111;

}


.toast{
  height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1111;
}

.ipt {
  border-radius: 10rpx;
  box-sizing: border-box;
  padding:  0 15rpx;
  height: 60rpx;
  border: 1rpx solid #ccc;
  margin-top: 15rpx;
}
._btn {
  /* width: 600rpx; */
  height: 75rpx;
  line-height: 75rpx;
  border-radius: 10rpx;
  background: #111;
  color: #ccb458;
  text-align: center;
  width: 100%;
  margin-top: 30rpx;
}
._title{
  margin-top: 15rpx;
  color: #666;
}