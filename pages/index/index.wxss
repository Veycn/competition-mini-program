.container{
  width: 100%;
}
.swiper-wrapper{
  width: 100%;
  height: 325rpx;
}
.swiper-wrapper swiper{
  height: 100%;
}
.selection {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center; 
  padding-top: 20rpx;
}
.selection .row {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 20rpx;
}
.selection .row .item{
  padding: 10rpx;
  box-shadow:0 0 6rpx 4rpx rgba(125, 119, 119, 0.35);
}
.item > .icon{
  width: 60rpx;
  height: 60rpx;
  vertical-align: top;
  margin-right: 15rpx;
}

.content{

}
.content .title{
  width: 100%;
  text-align: center;
  border-top: 1rpx solid #ddd;
  padding-bottom: 20rpx;
}

.content .title .header {
  font-size: 18px;
  text-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.35);
}

.content-wrapper{
  padding-top: 15rpx;
}


/* 比赛列表 */

.content-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 15rpx;
}
.content-item .c-img{
  width: 240rpx;
  height: 200rpx;
  display: block;
}
.overview {

}
.overview .c-header {
  width: 100%;
  text-align: center;
  font-size: 18px;
  font-weight: 400;
  line-height: 1;
}
.type view{
  line-height: 1;
  margin-top: 12rpx;
}
.type {
  padding-left: 15rpx;
}