/* pages/message/index.wxss */
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.top{
  z-index: 200;
  background: #fff;
}
.bg {
  background: #f8f8f8;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
.active > .weui-navbar__title{
  color: #ccb458;
}
.weui-navbar__item{
  padding: 6rpx 0;
}
.weui-tab__panel{
  padding-top: 60rpx;
}
.weui-tab__content{
  box-sizing: border-box;
  padding: 20rpx 15rpx 0;
  text-align: initial;
  width: 100%;
  height: 100%;
}

.find-member, .find-team{
  width: 100%;
  height: 100%;
}
.float{
  position: absolute;
  display: block;
  bottom: 30rpx;
  right: 15rpx;
  z-index: 1000;
}
.toast{
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}
.form{
  width: 100%;
  position: relative;
}

.ipt{
  width: 100%;
  height: 75rpx;
  border: 1rpx solid #ddd;
  margin: 10rpx 0;
  border-radius: 5rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
  font-size: 30rpx;
  line-height: 50rpx;
}
.ipt.ta{
  width: 700rpx;
  padding: 15rpx;
  height: 200rpx;
  line-height: 40rpx;
}

.picker, .tips {
  font-size: 38rpx;
  color: #ccb458;
}
.tips{
  margin: 15rpx 0;
  font-size: 30rpx;
}
.release{
  width: 600rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: #111;
  color: #ccb458;
  text-align: center;
  line-height: 80rpx;
  margin-left: 50rpx;
}
.list-item {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx; 
}
.cando, .forward, .racename{
  font-size: 34rpx;
  color: #666666;
}
.cando > .can{
  font-size: 34rpx;
  color: #ccb458;
}