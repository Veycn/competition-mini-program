/* pages/myinfo/index.wxss */

.myinfo{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 15rpx 25rpx;
  background: #f8f8f8;
}
.avatar{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.avatar > .img{
  width: 240rpx;
  height: 240rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 8rpx #ccc;
}
.info-wrapper{
  width: 100%;
  border-radius: 15rpx;
  box-shadow: 0 0 8rpx #ccc;
  margin-top: 15rpx;
}
.item-row{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.item-row > .item {
  flex: 1;
  box-sizing: border-box;
  padding-left: 15rpx;
}
.item > .title{
  color: #666;
  font-size: 32rpx;
}
.item > .msg{
  color: #222;
  font-size: 34rpx;
  display: inline-block;
}
.info-toast {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
}
.m-wrapper{
  box-sizing: border-box;
  padding: 15rpx 25rpx;
}
.item{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  /* justify-content: ; */
  align-items: center;
  margin-bottom: 15rpx;
}
.item > .title{
  line-height: 60rpx;
  font-size: 32rpx;
}
.item > .ipt {
  display: inline-block;
  width: 400rpx;
  height: 60rpx;
  margin: 0;
  border-bottom: 1rpx solid #ddd;
  flex: 1;
  box-sizing: border-box;
  padding: 0 25rpx;
}

.tags-wrapper {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx;
  box-shadow: 0 0 6rpx #ddd;
  margin-top: 20rpx;
  border-radius: 15rpx;
}
.head {
  width: 100%;
  text-align: center;
}
.head > .t {
  color: #555;
  font-size: 40rpx;
}
.tag {
  padding: 6rpx 20rpx;
  background: rgb(13, 19, 34);
  color: #ccb458;
  margin: 15rpx 15rpx;
  display: inline-block;
  border-radius: 10rpx;
}
.ipt {
  border: 1rpx solid #ccc;
  width: 100%;
}
